<Page
    x:Class="Ozwego.OOBEPage5"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ozwego"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid x:Name="LayoutRoot" Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
    <Grid x:Name="OOBEContent">
		<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Insert Picture" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,50" />
            <TextBlock FontSize="13.333" HorizontalAlignment="Center" Margin="0,0,0,50" Height="176" Width="454" TextWrapping="Wrap" >
            	<Run Text="If you get stuck on a letter that you can't seem to use, you can trade it into the community pile by double clicking on the tile.  However, in return, you will receive 3 new random tiles."/>
            	<LineBreak/>
            	<Run/>
            	<LineBreak/>
            	<Run Text="There must be at least 3 tiles in the community before you can do a trade.  There are no limitations as to how many trades you can do per game."/>
            	<LineBreak/>
            	<Run/>
            	<LineBreak/>
            </TextBlock>
            <StackPanel Orientation="Horizontal"/>
        </StackPanel>
    </Grid>
    </Grid>
</Page>
