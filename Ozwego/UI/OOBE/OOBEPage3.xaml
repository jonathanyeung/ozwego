<Page
    x:Class="Ozwego.OOBEPage3"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ozwego"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <Grid x:Name="LayoutRoot" Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
    <Grid x:Name="OOBEContent">
		<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Insert Picture" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,50" />
            <TextBlock FontSize="13.333" HorizontalAlignment="Center" Margin="0,0,0,50" Height="176" Width="454" TextWrapping="Wrap" >
            	<Run Text="The goal of the game is to form words from your letter tiles as quickly as you can.  Everyone starts the game with 20 tiles.  Drag each tile on to the game board to form words.  In order to form a valid game board, all of your letters need to be contiguous, and all letters in a vertical and horizontal row must for a valid word."/>
            	<LineBreak/>
            	<Run/>
            	<LineBreak/>
            	<Run/>
            </TextBlock>
            <StackPanel Orientation="Horizontal"/>
        </StackPanel>
    </Grid>
    </Grid>
</Page>
